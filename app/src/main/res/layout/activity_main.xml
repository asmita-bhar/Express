<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E5FFCC"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    tools:context="com.example.asmita.text_to_speech.MainActivity">

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="114dp"
        android:ems="10"
        android:hint="text"
        android:inputType="text"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/speak"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/speak"
        android:layout_below="@+id/seekBar2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="46dp"
        android:text="Set Pitch : "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="15dp"
        android:layout_below="@+id/input"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_above="@+id/tv1"
        android:layout_alignStart="@+id/speak" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/tv"
        android:layout_below="@+id/tv"
        android:layout_marginTop="31dp"
        android:text="Set Speech Rate :"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="15dp" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/tv1"
        android:layout_alignStart="@+id/speak" />



</RelativeLayout>
